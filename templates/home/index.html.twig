{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>


	</div>

	{# on fait un dump de la variable articles qui contient tous les articles de la base grace à la fonction findAll() du repo ArticleRepository #}
	{{ dump(articles)}}
	{{ dump(articlesRecherche)}}
	<img src="{{asset('images/kakashi2.jpg')}}" style="width:350px">

	{% for article in articles %}
		<h3>{{article.titre}}
			-
			{{article.lacategorie.nom}}</h3>
		<a href="{{ path('edit_article', {'id': article.id}) }}">Modifier l'article</a>
		<p>{{article.contenu}}</p>
		<p>Publié le
			{{article.datecreation | date('d/m/Y H:i:s')}}
			par
			{{ article.auteur}}</p>
	{% endfor %}
{% endblock %}
